generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

  model Process {
  id String @id @default(uuid())
  numberProcess String
  forumName String
  courtName String
  courtNumber String
  author String
  defendantName String
  processStatus String? // Se for string ou opcional
  status ProcessStatus // Definir como um enum no Prisma
  pending String?
  note String?
  processDate DateTime
  partner String
  department String
  processOutcome ProcessOutcome
  value Float
  portion Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("processes")
}

enum ProcessStatus {
  available
  archived
  processing
}

enum ProcessOutcome {
  won
  lost
  undefined
}


